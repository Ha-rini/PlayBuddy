<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Gradient background and user header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/profile_gradient"
            android:gravity="center"
            android:paddingTop="40dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_profile"
                android:backgroundTint="#ffffff"
                app:tint="@color/secondaryColor"
                android:contentDescription="Profile Picture" />

            <TextView
                android:id="@+id/user_name_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/secondaryColor"
                android:paddingTop="12dp" />
        </LinearLayout>

        <!-- Profile Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- Name -->
            <TextView android:text="Name"
                android:textStyle="bold"
                android:textColor="@color/secondaryColor"
                android:layout_marginTop="16dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Timothy Garza"
                android:textSize="16sp" />

            <!-- Phone -->
            <TextView android:text="Phone Number"
                android:textStyle="bold"
                android:textColor="@color/secondaryColor"
                android:layout_marginTop="16dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>
            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9876543210"
                android:textSize="16sp" />

            <!-- Email -->
            <TextView android:text="Email"
                android:textStyle="bold"
                android:textColor="@color/secondaryColor"
                android:layout_marginTop="16dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>
            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="timothy@email.com"
                android:textSize="16sp" />

            <!-- Locality -->
            <TextView android:text="Locality"
                android:textStyle="bold"
                android:textColor="@color/secondaryColor"
                android:layout_marginTop="16dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>
            <TextView
                android:id="@+id/locality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Andheri West"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Logout"
            android:textStyle="bold"
            android:textColor="@color/backgroundColor"
            android:backgroundTint="@color/primaryColor" />
    </LinearLayout>
</ScrollView>

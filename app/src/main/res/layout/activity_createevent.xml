<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Activity"
            android:textSize="26sp"
            android:textStyle="bold"
            android:paddingTop="24dp"
            android:textColor="@color/primaryColor" />

        <!-- Sport Selection -->
        <TextView
            android:text="Select Sport"
            android:textSize="16sp"
            android:textColor="@color/secondaryColor"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/sport_spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_bg" />

        <!-- Date Picker -->
        <TextView
            android:text="Pick a Date"
            android:textSize="16sp"
            android:textColor="@color/secondaryColor"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_bg"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/date_picker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:hint="Select Date"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <!-- Time Picker -->
        <TextView
            android:text="Pick a Time"
            android:textSize="16sp"
            android:textColor="@color/secondaryColor"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_bg"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_clock"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/time_picker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:hint="Select Time"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <!-- Venue -->
        <TextView
            android:text="Select Venue"
            android:textSize="16sp"
            android:textColor="@color/secondaryColor"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_bg"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/venue_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Search for venues"
                android:focusable="false"
                android:clickable="false"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <!-- Map Fragment -->
        <com.google.android.gms.maps.MapView
            android:id="@+id/map_container"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_margin="16dp"
            tools:ignore="SpeakableTextPresentCheck" />




        <!-- Invite Friends -->
        <TextView
            android:text="Invite Nearby Friends"
            android:textSize="16sp"
            android:textColor="@color/secondaryColor"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_bg"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_people"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/friend_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Search friends nearby"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/create_activity_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Booking"
            android:textColor="@color/backgroundColor"
            android:backgroundTint="@color/primaryColor"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
